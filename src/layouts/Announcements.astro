---
import Default from "./Default.astro";
import Title from "./Title.astro";

const { frontmatter } = Astro.props;
---

<Default pageTitle={"uOImprov | " + frontmatter.title}>
  <div class="min-h-screen flex flex-col items-center">
    <Title>
      <div
        class="flex flex-col sm:flex-row justify-center items-center sm:max-w-4xl"
      >
        <img
          src={frontmatter.img}
          alt={frontmatter.title}
          class="rounded-lg flex-wrap w-5/6 max-w-60 sm:w-60 mr-4 mb-3 sm:mb-0"
        />
        <div>
          <h2 class="bowlby-one-regular text-base">Announcements &gt</h2>
          <h1 class="bowlby-one-regular text-2xl sm:text-3xl">
            {frontmatter.title}
          </h1>
          <p>{frontmatter.date}</p>
        </div>
      </div>
    </Title>
    <div class="mt-4 px-6 sm:w-[620px] lg:w-[800px] markdown">
      <slot />
    </div>
  </div>
  <style is:global>
    .markdown {
      p {
        margin-bottom: 0.3em;
      }

      h1,
      h2,
      h3 {
        font-family: "Bowlby One", sans-serif;
        font-weight: 400;
        font-style: normal;
      }

      h1 {
        margin-top: 0.2em;
        margin-bottom: 0.6em;
        font-size: 1.6rem;
        border-bottom: 4px solid transparent;
        background-origin: border-box;
        background-clip: padding-box, border-box;
        background-image: linear-gradient(white, white),
          linear-gradient(
            90deg,
            rgba(94, 238, 118, 1) 0%,
            rgba(62, 228, 255, 1) 100%
          );
      }

      h2 {
        font-size: 1.4rem;
        margin-top: 0.2em;
        margin-bottom: 0.4em;
      }

      h3 {
        font-size: 1.2rem;
        margin-top: 0.2em;
        margin-bottom: 0.2em;
      }

      code {
        font-size: 1rem;
        background-color: #f4f4f4;
        padding: 5px;
        border-radius: 5px;
      }

      blockquote {
        font-style: italic;
        border-left: 5px solid transparent;
        background-origin: border-box;
        background-clip: padding-box, border-box;
        background-image: linear-gradient(white, white),
          linear-gradient(
            0deg,
            rgba(94, 238, 118, 1) 0%,
            rgba(62, 228, 255, 1) 100%
          );
        margin: 1em 0.5em;
        padding: 0.5em 10px;
      }

      ul {
        margin-left: 1em;
        margin-top: 0.3em;
        margin-bottom: 0.3em;
      }

      ul > li:before {
        margin-left: -0.5em;
        content: "-";
        color: #000000;
        margin-right: 0.5em;
      }

      ol {
        margin-left: 1em;
        margin-top: 0.3em;
        margin-bottom: 0.3em;
        counter-reset: list-number;
      }

      ol > li:before {
        margin-left: -0.5em;
        margin-right: 0.5em;
        counter-increment: list-number;
        content: counter(list-number) ".";
      }

      a {
        color: #3e77cc;
      }

      a:hover {
        text-decoration: underline;
      }

      img {
        max-width: 100%;
        max-height: 30rem;
        height: auto;
        margin: 1em auto;
      }
    }
  </style>
</Default>
